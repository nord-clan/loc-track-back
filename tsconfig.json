{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2015"],
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types"],
    "experimentalDecorators": true,

    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "#/prisma": ["./src/prisma.ts"]
    }
  },
  "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
